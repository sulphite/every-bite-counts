
<div class="container py-3 w-75">
  <%= link_to 'Back to Results', donuts_path, class: "btn btn-outline-secondary" %>
  <div class="show-grid my-3">

    <div class="show-title">
      <h1 class=""><%= @donut.title %></h1>
      <p><%= @donut.user.username %> - <%= @donut.location %></p>
      <p><%= @donut.flavour %></p>
      <%= @donut.description %>
      <% if current_user == @donut.user %>
      <%= link_to "Edit", edit_donut_path, class: "btn btn-warning btn-sm" %>
      <%= link_to "Delete", donut_path(@donut),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" %>
    <% end %>

    </div>

    <div class="show-photo">
      <% if @donut.photo.key %>
        <%= cl_image_tag @donut.photo.key, crop: :fill, class: "show-image" %>
      <% else %>
        <%= image_tag "https://s7d1.scene7.com/is/image/mcdonalds/mcdonalds-Sugar-Donut-3:1-3-product-tile-desktop?wid=829&hei=515&dpr=off" %>
        <%# <img src="https://s7d1.scene7.com/is/image/mcdonalds/mcdonalds-Sugar-Donut-3:1-3-product-tile-desktop?wid=829&hei=515&dpr=off" alt="Donut image" style="border-radius:5%" class="show-image"> %>
      <% end %>
    </div>

    <div class="show-stats">

    </div>

      <div class="show-booking">
      <% if user_signed_in?  %>
        <div class="form-control p-3">
          <h5>Book this donut</h5>
          <p>Price: Â£<%= @donut.price %></p>
          <%= render 'bookings/form', booking: @booking, donut: @donut %>
        </div>
      <% else %>
        <%= link_to 'Please Sign in to book', new_user_session_path, class: "btn btn-primary" %>
      <% end %>
      </div>


