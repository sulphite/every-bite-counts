<div class="simple_form--container">
<%= simple_form_for(@donut) do |f| %>
  <%= f.input :title %>
  <%= f.input :flavour %>
  <%= f.input :location %>
  <%= f.input :wholeness %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "List my donut", class: 'btn btn-primary rounded-pill mt-2' %>
<% end %>
</div>
