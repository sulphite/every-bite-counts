<div class="container" data-controller="location-autocomplete">
<%= form_with url: donuts_path, method: :get, class: "" do |f| %>
  <%= f.text_field :query, id: "search-input", placeholder: "Find a donut near you!", class: "form-control rounded-pill w-50 bg-white mb-3", data: { target: "search.input" } %>

  <%= f.submit "let's get some donuts", class: "btn btn-primary rounded-pill", data: { action: "click->search#submit" } %>

<% end %>


<%= simple_form_for(donuts_path) do |f| %>
  <div class="form-inputs">
    <%= f.input :location,
      input_html: {data: {location_autocomplete_target: "location"}, class: "d-none"},
      wrapper_html: {data: { location_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
    %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>
