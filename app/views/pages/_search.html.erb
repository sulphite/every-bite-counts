
<%= form_with url: donuts_path, method: :get, class: "d-flex w-25", data: { controller: "search" } do |f| %>
  <%= f.text_field :query, id: "search-input", placeholder: "Find a donut near you!", class: "form-control", data: { target: "search.input" } %>
  <%= f.submit "Search", class: "btn btn-primary", data: { action: "click->search#submit" } %>
<% end %>
